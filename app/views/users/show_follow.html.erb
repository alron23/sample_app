<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
     </section>  
      <% unless @users.empty? %>
      <section>
        <h3><%= yield(:title) %></h3>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, :size => 30), user %>
          <% end %>
        </div>
      </section>
        <% end %>
    </aside>
    <div class="span8">
      <h3><%= yield(:title) %></h3>
      <% if @users.any?  %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
        <% end %>
    </div>
  </div>